<%= form_for [@collaborator] do |f| %>
    <div class="col-md-8">
        <h2>Select Collaborators for the following Wiki:</h2>
        <div class="row">
            <div class="col-md-8">
                <p><%= @wiki.title %></p>
            </div>
        </div>
        <div class="form-group">
            <strong>Collaborators</strong> <%= select_tag('collaborator', options_from_collection_for_select(User.all.where.not(id: current_user.id), 'id', 'email'), include_blank: true) %>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success'%>
        </div>
    </div>
<% end %>
